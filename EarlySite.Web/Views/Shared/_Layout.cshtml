@using EarlySite.Model.Show

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0,user-scalable=no">
    <title>@ViewBag.Title - 哪儿吃</title>
    @Styles.Render("~/Themes/Style")
</head>
<body>

    @Scripts.Render("~/Themes/assembly/jquery")
    @Scripts.Render("~/Themes/assembly/bootstrap")
    @Scripts.Render("~/Themes/Scripts")


    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#target-menu">
                    <span class="sr-only"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">哪儿吃</a>
            </div>

            <div class="collapse navbar-collapse" id="target-menu">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="">
                            发现
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Profile",new {phone = ViewBag.Account.Phone })">
                            我的
                        </a>
                    </li>
                </ul>
                <form class="navbar-form navbar-left" role="search">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="搜索你感兴趣的食物">
                    </div>
                    <button type="submit" class="btn btn-default">搜索</button>
                </form>

                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="@Url.Action("Index", "Profile",new {@phone = ViewBag.Account.Phone})" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <img width="20" height="20" src="data:image/png;base64,@(ViewBag.Account == null ? "" : ViewBag.Account.Avator)" />
                            <span id="navNickname">@(ViewBag.Account == null ? "无" : ViewBag.Account.NickName)</span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Index", "Profile",new {@phone = ViewBag.Account.Phone})">我的</a></li>
                            <li><a href="@Url.Action("Setting","Profile",new { @phone = ViewBag.Account.Phone})">设置</a></li>
                            <li><a href="javascript:signOut('@(ViewBag.Account == null ? "0" : ViewBag.Account.Phone)')">退出</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    @RenderBody()
    <hr />
    <footer id="footer">
        <div class="footgap">
            <div class="footwrapper">
                <div class="footcontent">
                    <div class="footsitemap">
                        <dl>
                            <dt>关于</dt>
                            <dd>
                                <a title="关于我们" href="javascript:void(0)">关于我们</a>
                                <sup class="hot"></sup>
                            </dd>
                            <dd>
                                <a title="联系我们" href="javascript:void(0)">联系我们</a>
                            </dd>
                        </dl>
                        <dl>
                            <dt>特色服务</dt>
                            <dd>
                                <a title="哪吃VIP" href="javascript:void(0)">哪吃 VIP</a>
                            </dd>
                        </dl>
                        <dl>
                            <dt>更多</dt>
                            <dd>
                                <a title="帮助中心" href="javascript:void(0)">帮助中心</a>
                            </dd>
                            <dd>
                                <a title="意见建议" href="javascript:void(0)">意见建议</a>
                            </dd>
                        </dl>
                    </div>
                    <div class="footcooperation">
                        
                    </div>
                </div>
                <div class="footali_group">
                    <a href="javascript:void(0)">合作伙伴</a>
                    <a href="javascript:void(0)">合作伙伴</a>
                    <a href="javascript:void(0)">合作伙伴</a>
                </div>
                <div class="footextra">
                    <div class="sns">
                        关注哪吃:
                        <a href="javascript:void(0)" title="新浪微博"><b class="icon sina"></b></a>
                    </div>
                    <div class="copyright">
                        © 2007 - <script>document.write(new Date().getFullYear());</script>
                        <a href="javascipt:void(0)">Jaiden</a>
                        <strong>分享美好食物</strong>
                    </div>
                </div>
            </div>
        </div>
        
    </footer>

    @RenderSection("scripts", required: false)
</body>
</html>
